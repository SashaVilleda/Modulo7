    }                                    

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       numero1 = Integer.parseInt(this.num1.getText());
        numero2 = Integer.parseInt(this.num2.getText());
        
        resultadoResta = numero1 - numero2;
        
        this.resultado.setText(String.valueOf(resultadoResta)); // TODO add your handling code here:
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       
        numero1 = Integer.parseInt(this.num1.getText());
        numero2 = Integer.parseInt(this.num2.getText());
        
        resultadoMultiplicacion = numero1 * numero2;
        
        this.resultado.setText(String.valueOf(resultadoMultiplicacion));// TODO add your handling code here:
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        numero1 = Integer.parseInt(this.num1.getText());
        numero2 = Integer.parseInt(this.num2.getText());
        
        resultadoDivi = numero1 / numero2;
        
        this.resultado.setText(String.valueOf(resultadoDivi));// TODO add your handling code here:
    }                                        

